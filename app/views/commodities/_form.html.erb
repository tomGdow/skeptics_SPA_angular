<%= form_for @commodity, :remote => true  do |f| %>
	<% if @commodity.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@commodity.errors.count, "error") %> prohibited this commodity from being saved:</h2>
			<ul>
				<% @commodity.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :price %><br />
		<%= f.text_field :price %>
	</div>
	<div class="field">
		<%= f.label :image_url %><br />
		<%= f.text_field :image_url %>
	</div>
	<div class="field">
		<%= f.label :category %><br />
		<%= f.select :category,
			Commodity::CATEGORY_TYPES,
			prompt: 'Choose ...' %>
	</div>
	<div class="field">
		<%= f.label :year %><br />
		<%= f.number_field :year %>
	</div>
	<div class="field">
		<%= f.label :winner %><br />
		<%= f.check_box :winner %>
	</div>
	<div class="actions">
		<%= f.submit class: "button"%>
	</div>
<% end %>
