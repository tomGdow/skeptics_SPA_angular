<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Skeptics with Angular</title>

  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= javascript_include_tag "vendor/modernizr.js" %>
  <script  src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
  <%#= javascript_include_tag "angular-underscore-module.js" %>
  <%#= javascript_include_tag "underscore" %>
  <script src=" https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.15/angular-animate.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.11.2/TweenMax.min.js"></script>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true&libraries=places&language=en-US"></script>
  <script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-resource.min.js"></script>

  <%= csrf_meta_tags %>
</head>
<body ng-controller="MyCtrlIndex">
    <!--[if lt IE 7]>
    <p class="browsehappy">You are using an <strong>outdated</strong> browser.
        Please <a href="http://browsehappy.com/">upgrade
            your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="row">
      <div class="small-12 columns">
            <div class="row" my-draggable><!--Main NavBar-->
                <div class="small-12 columns">
                    <div id="main" ng-include="'/home/mainnav.html'"></div>
                </div>
            </div>
            <div  ng-include="'/home/timenav.html'"></div><!-- Time  Nav-bar-->
      </div>
    </div>
    <div class="row" ng-cloak><!--Get Longitude/Latitude -->
      <div class="small-12 columns dynamic_latlong" id="lat-to-long" ng-show ="longlat">
        <dl class="sub-nav" id="temp-nav">
          <dd></dd>
          <dd><button ng-click="doSearch()" class="button  tiny" id="lat_long_search_btn">Search</button></dd>
          <dd> <google-places location=location ng-focus="onFocus()" ></google-places></dd>
          <dd ng-show="toggleLatLongCaption" id ="my_latit_caption">Latitude:</dd>
          <dd ng-bind ="mylatitude" id ="my_latitude"></dd>
          <dd ng-show="toggleLatLongCaption" id ="my_longit_caption">Longitude:</dd>
          <dd ng-bind ="mylongitude" id ="my_longitude"></dd>
          <dd>
            <button ng-click="toggleView()" ng-show="showToggleButton"
                    class ="button tiny" id="min_expand_button">
                <span ng-show="minimizeExpand">Expand</span>
                <span ng-hide="minimizeExpand">Minimize</span>
            </button>
          </dd>
        </dl>
      </div>
    </div>
    <div class="row" ng-cloak> <!--Fahrenheit to Celcius Converter-->
      <div class="small-12 columns dynamic_temp" id="celcius-to-fahrenheit" ng-show ="cfConvModel">
        <dl class="sub-nav" id="temp-nav">
          <dd></dd>
          <dd><input type="number" ng-model="fahrenheit" ng-change="markEdited('F')" id = "fahrenheit"/> Fahrenheit</dd>
          <dd><input type="number" ng-model="celsius" ng-change="markEdited('C')" id ="celcius" /> Celsius</dd>
        </dl>
      </div>
    </div>
    <div class="row productsNavWrapper" ng-show ="toggleProductsNav"><!--products nav-bar-->
    <div class="row" id="productsnav">
      <div class="small-12 columns">
        <dl class="sub-nav">
          <dd><a href="#view6">Products</a></dd>
          <dd><a href="#view7">Add Product</a></dd>
          <dd><a href="#view9">Dynamic Searching</a></dd>
        </dl>
      </div>
    </div>
    </div>
    <div class="row">
      <div id = "aaa" class="small-12" ng-view></div> <!--ng-view-->
    </div>
    <div  ng-include="'/home/footer.html'" ng-cloak></div><!--footer-->
    <div class="cart" ></div><!--cart -->
    <%= javascript_include_tag "application" %>
</body>
</html>

