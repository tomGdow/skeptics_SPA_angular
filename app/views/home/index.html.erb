<body ng-controller="MyCtrlIndex">
    <!--[if lt IE 7]>
    <p class="browsehappy">You are using an <strong>outdated</strong> browser.
        Please <a href="http://browsehappy.com/">upgrade
            your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="row">
      <div class="small-12 columns">
            <div class="row" my-draggable><!--Main NavBar-->
                <div class="small-12 columns">
                    <div id="main" ng-include="'/home/mainnav.html'"></div>
                </div>
            </div>
            <div  ng-include="'/home/timenav.html'"></div><!-- Time  Nav-bar-->
      </div>
    </div>
    <div class="row" ng-cloak><!--Get Longitude/Latitude -->
      <div class="small-12 columns dynamic_latlong" id="lat-to-long" ng-show ="longlat">
        <dl class="sub-nav" id="temp-nav">
          <dd></dd>
          <dd>
            <button ng-click="doSearch()" class="button  tiny" id="lat_long_search_btn">Search</button>
          </dd>
          <dd>
            <google-places location=location
                           ng-focus="onFocus()"
                           focus-on="focusMe" >
            </google-places>
          </dd>
          <dd ng-show="toggleLatLongCaption" id ="my_latit_caption">Latitude:</dd>
          <dd ng-bind ="mylatitude" id ="my_latitude" ></dd>
          <dd ng-show="toggleLatLongCaption" id ="my_longit_caption">Longitude:</dd>
          <dd ng-bind ="mylongitude" id ="my_longitude"></dd>
          <dd>
            <button ng-click="toggleView()" ng-show="showToggleButton"
                    class ="button tiny" id="min_expand_button">
                <span ng-show="minimizeExpand">Expand</span>
                <span ng-hide="minimizeExpand">Minimize</span>
            </button>
          </dd>
        </dl>
      </div>
    </div>
    <div class="row" ng-cloak> <!--Fahrenheit to Celcius Converter-->
      <div class="small-12 columns dynamic_temp" id="celcius-to-fahrenheit" ng-show ="cfConvModel">
        <dl class="sub-nav" id="temp-nav">
          <dd></dd>
          <dd>
            <input type="number" ng-model="fahrenheit"
                     ng-change="markEdited('F')" id = "fahrenheit"/>
            Fahrenheit
          </dd>
          <dd>
            <input type="number" ng-model="celsius"
                     ng-change="markEdited('C')" id ="celcius" />
            Celsius
          </dd>
        </dl>
      </div>
    </div>

    <span ng-include="'/home/timer.html'"></span>

    <div class="row productsNavWrapper" ng-show ="toggleProductsNav"><!--products nav-bar-->
    <div class="row" id="productsnav">
      <div class="small-12 columns">
        <dl class="sub-nav">
          <dd>
            <a href="#view5">
              <span  ng-show="toggleview5" ng-click = "showLittleCart()">Dynamic Searching</span>
            </a>
            <a href="#view15">
              <span ng-show="toggleview15" ng-click = "showLittleCart()">Dynamic Searching</span>
            </a>
          </dd>
          <dd><a href="#view7" ng-click = "showLittleCart()">New Product</a></dd>
          <dd>
            <a href="#view9">
              <span  ng-show="toggleview9" ng-click = "showLittleCart()">Products Search</span>
            </a>
            <a href="#view6">
              <span  ng-show="toggleview6" ng-click = "showLittleCart()">Products Search</span>
            </a>
          </dd>
        </dl>
      </div>
    </div>
    </div>
    <div class="row" >
      <div id = "ngView"  class="small-12" ng-view></div> <!--ng-view-->
    </div>
    <div class ="cartPartial" id = "cartP" my-draggable>
      <div class="cart" id="mycart" ></div><!--cart -->
    </div>
    <div  ng-include="'/home/footer.html'" ng-cloak></div><!--footer-->
    <%= javascript_include_tag "application" %>

