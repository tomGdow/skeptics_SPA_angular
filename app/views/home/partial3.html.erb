<!-- Controller Three-->
<!-- Instagram-->

<div class="col-partial3" ng-cloak>
  <a href="#view13" class = "fa  fa-dribbble smallIcon" title ="Dribbble feed">&nbsp;Dribbble</a>
    <div>
        <div class="bar"><!-- Begin Flexbox -->
          <h2 id ="instagrams">{{viewThreeMessage}}</h2>

          <span>
            <a class="list-icon" ng-class="{active: layout == 'list'}" ng-click="layout = 'list'"></a>
            <a class="grid-icon" ng-class="{active: layout == 'grid'}" ng-click="layout = 'grid'"></a>
          </span>
        </div> <!-- end Flexbox -->

      <ul ng-show="layout == 'grid'" class="grid">
            <li ng-repeat="p in pics">
                <a href="{{p.link}}" target="_blank">
                    <img ng-src="{{p.images.low_resolution.url}}" />
                </a>
            </li>
        </ul>

        <ul ng-show="layout == 'list'" class="list">
            <li ng-repeat="p in pics " >
                <a href="{{p.link}}" target="_blank">
                  <img ng-src="{{p.images.thumbnail.url}}" />
                </a>
              <div class ="instagramPics">
                <p class="igram_full_name">{{p.caption.from.full_name}}</p>
                <p class="igram_info">{{p.caption.text | limitTo: 144}} </p>
                <p class="igram_info"><span class ="fa fa-heart-o " >&nbsp; {{p.likes.count}}&nbsp;likes</span></p>
              </div>
            </li>
        </ul>
    </div>
  <div class ="httpStatus4 {{instagramArrayLength()}}" ng-show="false" ng-cloak></div>
</div>
