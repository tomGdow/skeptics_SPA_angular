<div class =vgOuterContainer ng-mouseleave="vgMouseLeave()">

  <!--videogular video panel-->
  <div class="videogular-container" ng-style="style()">
    <videogular
    ng-class ="setvideogularClass ? 'videoregular-video-one ':'{{videoregularFalse}} '"
    vg-width="config.width"
    vg-height="config.height"
    vg-theme="config.theme"
    ng-mouseover="vgMouseOver()">

      <video class='videoPlayer'
             vg-src="config.sources"
             preload='none'>
      </video>
      <vg-controls
      vg-autohide="config.autoHide"
      vg-autohide-time="config.autoHideTime"
      style="height: 50px;">

        <!-- First element from the left -->
        <vg-play-pause-button></vg-play-pause-button>
        <vg-timeDisplay>{{ currentTime}}</vg-timeDisplay>
        <vg-scrubBar>
          <vg-scrubbarcurrenttime></vg-scrubbarcurrenttime>
        </vg-scrubBar>
        <vg-timeDisplay>{{ totalTime }}</vg-timeDisplay>
        <vg-volume>
          <vg-mutebutton></vg-mutebutton>
          <vg-volumebar></vg-volumebar>
        </vg-volume>
        <vg-fullscreenButton ng-click="today()"></vg-fullscreenButton>

      </vg-controls>
      <vg-buffering></vg-buffering>
      <vg-overlay-play></vg-overlay-play>
      <vg-poster-image
      vg-url='config.plugins.poster.url'
      vg-stretch="config.stretch.value">
      </vg-poster-image>

    </videogular>
  </div><!--end videogular video panel-->

  <!--Videogular Bindings Control Panel-->
  <div  ng-class ="setVgBingingClass ? 'vgControlsTwo  vgControlsHidden':'vgControlsTwo '">
    <div class="row" >
      <div class="small-12 columns">
        <dl class="sub-nav">
          <dd>&nbsp;</dd>
          <dd>
            <button class ="button tiny" ng-click ="tomfn()">
              <span ng-show="makeSmall">Smaller View</span>
              <span ng-show = "makeLarge">Larger View</span>
            </button>
          </dd>
          <dd>
            <div>
              <input id="widthInput"
                     class="form-control ng-pristine ng-valid"
                     type="text"
                     ng-model="config.width">
              <label for="widthInput">Width</label>
            </div>
          </dd>
          <dd>
            <div>
              <input id="heightInput"
                     class="form-control ng-pristine ng-valid"
                     type="text"
                     ng-model="config.height">
              <label for="heightInput">Height</label>
            </div>
          </dd>
          <dd>
            <div>
              <label class="checkbox">
                <input id="autoHideInput"
                       class="ng-valid ng-dirty"
                       type="checkbox"
                       ng-model="config.autoHide">
                Autohide
              </label>
            </div>
          </dd>
          <dd></dd>
          <dd></dd>
          <dd></dd>
        </dl>
      </div>
    </div>
  </div>
</div><!--end Videogular Outer Container-->